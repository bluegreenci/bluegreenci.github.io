---
import { SITE, SOCIAL_LINKS } from '@/consts'
import SocialIcons from './SocialIcons.astro'

const isExternalLink = (href: string) => {
  return href.startsWith('http')
}
---

<footer class="bg-background/80 border-border/50 border-t backdrop-blur-md">
  <div class="w-full px-4 py-8 sm:py-10">
    <div class="mx-auto flex max-w-3xl flex-col gap-8">
      <!-- Main Footer Content -->
      <div class="flex justify-center">
        <SocialIcons links={SOCIAL_LINKS} />
      </div>

      <!-- Separator -->
      <div class="bg-border/60 h-px" aria-hidden="true"></div>

      <!-- Bottom Section -->
      <div
        class="text-muted-foreground flex flex-col items-center gap-2 text-sm sm:flex-row sm:justify-center"
      >
        <div class="text-center">
          &copy; {new Date().getFullYear()}
          {SITE.title}. All rights reserved.
        </div>
      </div>
    </div>
  </div>
</footer>
